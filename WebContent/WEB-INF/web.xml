<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app 
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" 
    "http://java.sun.com/dtd/web-app_2_3.dtd">

 <web-app>
   <display-name>Channel Subscription Servlets</display-name>
   <context-param>
     <param-name>BDBstore</param-name>
     <param-value>/home/cis455/database</param-value>
   </context-param>
    
   <servlet>
     <servlet-name>xpath</servlet-name>
     <servlet-class>edu.upenn.cis455.servlet.XPathServlet</servlet-class> 
   </servlet>
   
   <servlet>
     <servlet-name>login</servlet-name>
     <servlet-class>edu.upenn.cis455.servlet.LoginServlet</servlet-class> 
     <load-on-startup>1</load-on-startup>
   </servlet>
   
   <servlet>
     <servlet-name>signup</servlet-name>
     <servlet-class>edu.upenn.cis455.servlet.SignUpServlet</servlet-class> 
   </servlet>
   
   <servlet>
     <servlet-name>displaychannel</servlet-name>
     <servlet-class>edu.upenn.cis455.servlet.DisplayChannel</servlet-class> 
   </servlet>
   
   <servlet>
     <servlet-name>userprofile</servlet-name>
     <servlet-class>edu.upenn.cis455.servlet.UserProfile</servlet-class> 
   </servlet>
   
   <servlet>
     <servlet-name>logout</servlet-name>
     <servlet-class>edu.upenn.cis455.servlet.LogoutServlet</servlet-class> 
   </servlet>
    
   <servlet-mapping>
     <servlet-name>xpath</servlet-name>
     <url-pattern>/xpath</url-pattern>
   </servlet-mapping>
   
   <servlet-mapping>
     <servlet-name>login</servlet-name>
     <url-pattern>/</url-pattern>
   </servlet-mapping>
   
   <servlet-mapping>
     <servlet-name>signup</servlet-name>
     <url-pattern>/signup</url-pattern>
   </servlet-mapping>
   
   <servlet-mapping>
     <servlet-name>displaychannel</servlet-name>
     <url-pattern>/displaychannel</url-pattern>
   </servlet-mapping>
   
   <servlet-mapping>
     <servlet-name>userprofile</servlet-name>
     <url-pattern>/home</url-pattern>
   </servlet-mapping> 
    
	<servlet-mapping>
     <servlet-name>logout</servlet-name>
     <url-pattern>/logout</url-pattern>
   </servlet-mapping>
	
   <!-- add any additional servlets and servlet mappings here -->

</web-app>
